package shashi.uomtrust.ac.mu.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import shashi.uomtrust.ac.mu.entity.Account;



@Repository
public interface AccountRepository extends JpaRepository<Account, Long> {
		
		public Account findById(Long id);
		public Account findByEmail(String email);
		
		@Query("select * from Account a where a.email =:account.email and a.password =:account.password")
		public boolean findByUsernameAndPassword(Account account);
		
}
